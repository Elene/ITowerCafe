@model IEnumerable<ITowerCafe.Models.DisplayMenuItemViewModel>
@{
    /**/

    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm(new { companyId = ViewBag.CompanyId }))
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreparationTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(model => item.PreparationTime)
                </td>
                <td>
                    @Html.DisplayFor(model => item.ProductCode)
                </td>
                <td>
                    @Html.ActionLink("Remove", "Remove", new { id = item.Id, companyId = ViewBag.CompanyId })
                </td>
            </tr>
        }

    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Pay" class="btn btn-default" />
        </div>
    </div>

}

<p>
    @Html.ActionLink("Back to List", "Details", "Company", new { id = ViewBag.CompanyId }, null)
</p>
