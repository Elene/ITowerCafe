@model ITowerCafe.Models.ReportViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Here are some statistical reports </h2>

<h3> Sum of your paid money for each company </h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PersonalStatistics[0].CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonalStatistics[0].TotalCost)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.PersonalStatistics)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
        </tr>
    }

</table>

<h3> Most popular product in your orders </h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MostPopularProduct.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MostPopularProduct.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MostPopularProduct.Product.Name)
        </th>
        <th></th>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(model => model.MostPopularProduct.Name)
        </td>
        <td>
            @Html.DisplayFor(model => model.MostPopularProduct.Price)
        </td>
        <td>
            @Html.DisplayFor(model => model.MostPopularProduct.Product.Code)
        </td>
    </tr>

</table>
